<div class="ui middle aligned center aligned grid">
  <div class="column" style="width: 450px;">
    <h2 class="ui blue image header">
      <div class="content">
        Log-in to your account
      </div>
    </h2>
    <%= form_for(resource, :html => {:class => "ui large form", :autocomplete => "off"}, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.email_field :email, autofocus: true %>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password %>
          </div>
        </div>
        <%= f.submit "Log in", class: "ui button large fluid submit blue" %>
        <br/>
        <% if devise_mapping.rememberable? %>
          <div class="ui checkbox">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      </div>
      <div class="ui error message"></div>
    <% end %>

    <div class="ui message">
      New to us? <%= link_to "Sign up", new_registration_path(resource_name) %><br/>
      <%= link_to "Forgot your password?", new_password_path(resource_name) %>
    </div>
  </div>
</div>
