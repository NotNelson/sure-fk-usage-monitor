<!DOCTYPE html>
<html>
  <head>
    <title>Sure FK Multi Account Monitor</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <style>
      body {
        padding-top: 40px;
      }
    </style>
    <script async defer data-domain="datausage.site" src="https://plausible.io/js/plausible.js"></script>

  </head>

  <body>
    <div class="ui container">
      <% if user_signed_in? %>
      <div class="ui menu">
        <%= link_to 'My Accounts', accounts_path, class: "item" %>
        <div class="right menu">
          <div class="ui simple dropdown item">
            <%= current_user.email %> <i class="dropdown icon"></i>
            <div class="menu">
              <%= link_to 'Edit User', edit_user_registration_path, class: "item" %>
              <%= link_to('Logout', destroy_user_session_path, class: "item", method: :delete) %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
